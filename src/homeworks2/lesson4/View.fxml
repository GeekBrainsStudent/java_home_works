<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="homeworks2.lesson4.Controller">
   <left>
      <ListView fx:id="users_list" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </left>
   <center>
      <TableView fx:id="messages_table" BorderPane.alignment="CENTER">
        <placeholder>
            <Label text="Пусто" />
        </placeholder>
        <columns>
          <TableColumn fx:id="mess_col" prefWidth="75.0" text="C1" />
          <TableColumn fx:id="date_col" prefWidth="75.0" text="C2" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <effect>
            <BoxBlur height="0.0" iterations="0" />
         </effect>
      </TableView>
   </center>
   <bottom>
      <SplitPane dividerPositions="0.5" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <items>
            <StackPane prefHeight="150.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="type_message" onAction="#send_mess">
                     <StackPane.margin>
                        <Insets left="10.0" right="10.0" />
                     </StackPane.margin>
                  </TextField>
               </children>
            </StackPane>
            <StackPane prefHeight="150.0" prefWidth="200.0">
               <children>
                  <Button fx:id="send_message" alignment="CENTER" mnemonicParsing="false" onAction="#send_mess" text="SEND" />
               </children>
            </StackPane>
         </items>
      </SplitPane>
   </bottom>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#close" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#about" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
